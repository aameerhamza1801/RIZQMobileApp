<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_cards_admin"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/admin_event_description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Event Description"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textColor="#1b8d1b"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/admin_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_event_description"
            android:text="Event Location"
            android:layout_marginTop="8dp"
            android:textAlignment="viewStart"
            android:textColor="#1b8d1b"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/admin_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_event_location"
            android:text="Date\time"
            android:textAlignment="viewStart"
            android:layout_marginTop="8dp"
            android:textColor="#1b8d1b"
            android:inputType="text"
            android:textSize="18dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>