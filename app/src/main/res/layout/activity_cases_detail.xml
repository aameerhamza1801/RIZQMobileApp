<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CasesDetailActivity"
    android:background="@android:color/holo_purple">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/user_case_detail_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/user_case_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Needy Name"
        android:textAlignment="center"
        android:layout_below="@+id/user_case_detail_image"
        android:textSize="20dp"
        android:padding="7dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />

    <TextView
        android:id="@+id/user_case_detail_description_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_case_detail_name"
        android:text=" Description : "
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/user_case_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description kddddddddddd kdlkdkdkd kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
        android:textAlignment="viewStart"
        android:padding="7dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        android:layout_below="@+id/user_case_detail_description_heading"
        />
    <TextView
        android:id="@+id/user_case_detail_cnic_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_case_detail_description"
        android:text=" CNIC :  "
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/user_case_detail_cnic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CNIC"
        android:padding="2dp"
        android:layout_below="@+id/user_case_detail_cnic_heading"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />

    <TextView
        android:id="@+id/user_case_detail_account_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Account :  "
        android:layout_below="@+id/user_case_detail_cnic"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/user_case_detail_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:padding="2dp"
        android:layout_below="@+id/user_case_detail_account_heading"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />
    <TextView
        android:id="@+id/user_case_detail_amount_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_case_detail_account"
        android:text=" Amount : "
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/user_case_detail_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Collected/Amount Remaining"
        android:padding="2dp"
        android:layout_below="@+id/user_case_detail_amount_heading"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b" />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/case_amount_pie_chart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/user_case_detail_amount">

    </com.github.mikephil.charting.charts.PieChart>

    <Button
        android:id="@+id/donate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:text="DONATE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/case_amount_pie_chart"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>


</RelativeLayout>


</ScrollView>