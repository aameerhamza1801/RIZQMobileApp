<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CasesDetailActivity">

    <ImageView
        android:id="@+id/user_case_detail_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/user_case_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Needy Name"
        android:textAlignment="center"
        android:layout_below="@+id/user_case_detail_image"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />
    <TextView
        android:id="@+id/user_case_detail_description"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="Description"
        android:textAlignment="viewStart"
        android:padding="10dp"
        android:layout_below="@+id/user_case_detail_name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />
    <TextView
        android:id="@+id/user_case_detail_cnic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CNIC"
        android:padding="2dp"
        android:layout_below="@+id/user_case_detail_description"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />
    <TextView
        android:id="@+id/user_case_detail_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account"
        android:padding="2dp"
        android:layout_below="@+id/user_case_detail_cnic"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b"
        />
    <TextView
        android:id="@+id/user_case_detail_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Collected/Amount Remaining"
        android:padding="2dp"
        android:layout_below="@+id/user_case_detail_account"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1b8d1b" />
    <Button
        android:id="@+id/donate"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:text="DONATE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/user_case_detail_amount"/>

</RelativeLayout>