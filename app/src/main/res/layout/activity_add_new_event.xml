<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewEventActivity">

    <TextView
        android:id="@+id/new_event_descriptionhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Description :"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textAllCaps="true"/>
    
    <EditText
        android:id="@+id/new_event_description"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/new_event_descriptionhd"
        android:hint="Event Description"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/new_event_locationhd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_event_description"
        android:text="Event Location :"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textAllCaps="true"/>

    <EditText
        android:id="@+id/new_event_location"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/new_event_locationhd"
        android:hint="Event Location"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/new_event_timehd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_event_location"
        android:text="Event Time :"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textAllCaps="true"/>
    <EditText
        android:id="@+id/new_event_time"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/new_event_timehd"
        android:hint="Event Time"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/new_event_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Add Event"
        android:layout_below="@+id/new_event_time"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"/>

</RelativeLayout>