<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/user_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textColor="#1b8d1b"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/user_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_event_description"
            android:text="Event Location"
            android:layout_marginTop="8dp"
            android:textAlignment="viewStart"
            android:textColor="#1b8d1b"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/user_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_event_location"
            android:text="Date\time"
            android:textAlignment="viewStart"
            android:layout_marginTop="8dp"
            android:textColor="#1b8d1b"
            android:inputType="text"
            android:textSize="18dp" />
        <Button
            android:id="@+id/user_event_volunteer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_event_time"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttons"
            android:text="Volunteer" />



    </RelativeLayout>

</android.support.v7.widget.CardView>