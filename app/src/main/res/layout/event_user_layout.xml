<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/event_cards"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:id="@+id/relative_layout_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_card">
        <TextView
            android:id="@+id/user_event_description"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Event Description"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textColor="#1b8d1b"
            android:textSize="20dp"
            />


        <TextView
            android:id="@+id/user_event_location"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/user_event_description"
            android:padding="10dp"
            android:text="Event Location"
            android:layout_marginTop="8dp"
            android:textAlignment="viewStart"
            android:textColor="#1b8d1b"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/user_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_event_location"
            android:text="Date\time"
            android:textAlignment="viewStart"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:textColor="#1b8d1b"
            android:inputType="text"
            android:textSize="18dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>